<h1>New sneaker</h1>
<%= form_tag "/sneakers", method: "post" do %>  
 <div class="form-group">
   Brand: <input type="text" class="form-control" name="form_brand">
 </div>
 <div class="form-group">
   Price: <input type="text" class="form-control" name="form_price">
 </div>
 <div class="form-group">
   Description: <input type="text" class="form-control" name="form_description">
 </div>
 <div class="form-group">
   Image: <input type="text" class="form-control" name="form_image">
 </div>
 <input type="submit" class="btn btn-default" value="Create sneaker">

<% end %>

