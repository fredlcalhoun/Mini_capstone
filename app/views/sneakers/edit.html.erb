<h1>Edit sneaker</h1>
<%= form_tag "/sneakers/#{@sneaker.id}", method: "patch" do %>  
 <div class="form-group">
   Brand: <input type="text" class="form-control" value="<%=@sneaker.brand %>" name="form_brand">
 </div>
 <div class="form-group">
   Price: <input type="text" class="form-control" value="<%=@sneaker.price %>" name="form_price">
 </div>
 <div class="form-group">
   Description: <input type="text" class="form-control" value="<%=@sneaker.description%>" name="form_description">
 </div>
 <div class="form-group">
   Image: <input type="text" class="form-control" value="<%=@sneaker.image %>" name="form_image">
 </div>
 <input type="submit" class="btn btn-default" value="Update sneaker">

<% end %>